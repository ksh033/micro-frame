{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@micro-frame/sc-runtime": [
        "./packages/runtime/src/index.ts"
      ],
      "@micro-frame/plugin-microlayout": [
        "./packages/plugin-microlayout/src/index.ts"
      ],
      "@micro-frame/sc-slave": [
        "./packages/slave/src/index.ts"
      ],
      "@@/*": [
        "packages/web/src/.umi/*"
      ]
    }
  },
  "typings": "./typings.d.ts",
  "include": [
    "**/src/**/*",
    "**/docs/**/*",
    "scripts/**/*",
    "**/demos",
    ".eslintrc.js",
    "tests",
    "jest.config.js",
    "**/fixtures",
    "./tests/no-duplicated.ts",
    "packages/runtime/publish/iconfont.js"
  ]
}