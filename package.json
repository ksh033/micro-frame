    "@umijs/fabric": "^3.0.0",
    "@umijs/lint": "^4.0.52",
    "@umijs/max": "^4.0.64",
    "@umijs/renderer-react": "^4.0.64",
    "@umijs/utils": "^4.0.64",
    "ahooks": "^3.7.6",
    "antd": "^5.4.2",
    "array-move": "^4.0.0",
    "babel-loader": "^9.1.2",
